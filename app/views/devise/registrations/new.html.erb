<h2>Register</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-horizontal', name: 'registrationForm'}) do |f| %>
    <%= devise_error_messages! %>

<div class="form-group">
    <label for="inputEmail" class="col-sm-2 control-label"><%= t('registration.email') %></label>
    <div class="col-sm-10">
        <input type="email" name="user[email]" ng-model="user.email" class="form-control" id="inputEmail" placeholder="Email" required>
    </div>
</div>
<div class="form-group">
    <label for="inputPassword" class="col-sm-2 control-label"><%= t('registration.password') %></label>
    <div class="col-sm-10">
        <input type="password" name="user[password]" ng-model="user.password" class="form-control" id="inputPassword" placeholder="Password" ng-minlength="8" required>
    </div>
</div>
<div class="form-group">
    <label for="inputPasswordConfirmation" class="col-sm-2 control-label"><%= t('registration.password_confirmation') %></label>
    <div class="col-sm-10">
        <input type="password" name="user[confirm_password]" ng-model="user.confirm_password" class="form-control" id="inputPasswordConfirmation" placeholder="Confirm Password" ng-minlength="8" required>
    </div>
</div>
<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-primary" ng-click="register(user)" ng-disabled="registrationForm.$invalid"><%= t('application.register') %></button>
    </div>
</div>

<div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
        <%= render "devise/shared/links" %>
    </div>
</div>
<% end %>