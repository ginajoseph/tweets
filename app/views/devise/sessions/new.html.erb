<h2><%= t('application.sign_in') %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-horizontal', name: 'loginForm'}) do |f| %>

    <div class="form-group">
        <label for="inputEmail" class="col-sm-2 control-label"><%= t('registration.email') %></label>
        <div class="col-sm-10">
            <input type="email" name="user[email]" ng-model="user.email" class="form-control" id="inputEmail" placeholder="Email" required>
        </div>
    </div>
    <div class="form-group">
        <label for="inputPassword" class="col-sm-2 control-label"><%= t('registration.password') %></label>
        <div class="col-sm-10">
            <input type="password" name="user[password]" ng-model="user.password" class="form-control" id="inputPassword" placeholder="Password" ng-minlength="8" required>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <div class="checkbox">
                <label><input type="checkbox" name="user[remember_me]" ng-value="1" ng-checked="user.remember_me"> Remember me</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <button type="submit" class="btn btn-primary" ng-click="login(user)" ng-disabled="loginForm.$invalid"><%= t('application.sign_in') %></button>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= render "devise/shared/links" %>
        </div>
    </div>
<% end %>
